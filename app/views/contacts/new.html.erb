
    <nav>
        <div id="navlinks">
        <%= link_to "Home", home_path %>
        <a id="active" href="#"> Contact </a> 
        <%= link_to "Store", store_path %>
        </div>
    </nav>
    <header>
        <h1> The Turtle Heart </h1>
        <div class="bar"> </div>
        <h3> Handmade in Woodside, California </h3>
    </header>
    
    <div class="sub">
        <%= image_tag('sub.jpg') %>
    </div>
    <p id="notice"><%= notice %></p>
    <div align="center">
        <h2 style="color: #6ca29b;">Contact Us</h2>

        <%= simple_form_for @contact do |f| %>
        <div class="field">
            <%= f.label :name, 'Name' %><span style="color: #6ca29b;font-weight:bold"> * </span><br>
            <%= f.text_field :name, :required => true %>
        </div>
        <div class="field">
            <%= f.label :email, 'Email' %><span style="color: #6ca29b;font-weight:bold"> * </span><br>
            <%= f.text_field :email, :required => true %>
        </div>
        <div class="field">
            <%= f.label :message, 'Message' %><span style="color: #6ca29b;font-weight:bold"> * </span><br>
            <%= f.text_area :message, :required => true %>
        </div>
        <div class= "hidden">
          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
        </div>
        <div>
          </br>
          <%= f.button :submit, 'Send!', :class => "btn" %>
        </div>
        <% end %>
        </div>
    </div>
